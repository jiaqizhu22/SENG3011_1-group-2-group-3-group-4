{
  "swagger": "2.0",
  "info": {
    "description": "1 Group 2 Group 3 Group 4 - Epidemic Scraper Documentation",
    "version": "1.0.0",
    "title": "Epidemic Scraper",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "127.0.0.1:8000",
  "basePath": "/",
  "tags": [
    {
      "name": "Search",
      "description": "Methods for searching the scraped database"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/search": {
      "get": {
        "tags": [
          "Search"
        ],
        "summary": "Test the api",
        "description": "This tests the API",
        "operationId": "getSearch",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "start_date",
            "description": "Start date of search range",
            "required": true,
            "type": "string",
            "format": "date-time"
          },
          {
            "in": "query",
            "name": "end_date",
            "description": "End date of search range",
            "required": true,
            "type": "string",
            "format": "date-time"
          },
          {
            "in": "query",
            "name": "location",
            "description": "Location of diseases searched",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "key_terms",
            "description": "Key terms to search for: Searches for entries with ALL of these terms",
            "required": true,
            "type": "array",
            "items": {
              "type": "string"
            },
            "collectionFormat": "csv"
          }
        ],
        "responses": {
          "200": {
            "description": "Search result",
            "schema": {
              "type": "object",
              "properties": {
                "results": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/SearchResult"
                  }
                }
              },
              "example": {
                "results": [
                  {
                    "title": "Article Title",
                    "date": "2015-10-01T08:45:10",
                    "link": "article.com/article-title"
                  },
                  {
                    "title": "Second Article",
                    "date": "2015-10-01T09:32:11",
                    "link": "article.com/article-number-two"
                  }
                ]
              }
            }
          },
          "default": {
            "description": "Error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "SearchResult": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "link": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "Error": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        }
      },
      "example": {
        "code": 404,
        "message": "404 Not Found"
      }
    }
  }
}