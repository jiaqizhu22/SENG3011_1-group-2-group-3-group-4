{
  "swagger": "2.0",
  "info": {
    "description": "1 Group 2 Group 3 Group 4 - Epidemic Scraper Documentation",
    "version": "1.0.0",
    "title": "Epidemic Scraper",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "http://127.0.0.1:8000",
  "basePath": "/",
  "tags": [
    {
      "name": "Search",
      "description": "Methods for searching the scraped database"
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/search": {
      "get": {
        "tags": [
          "Search"
        ],
        "summary": "User login",
        "description": "This tests the API",
        "operationId": "getSearch",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "start_date",
            "description": "Start date of search range",
            "required": true,
            "type": "string",
            "format": "date-time"
          },
          {
            "in": "query",
            "name": "end_date",
            "description": "End date of search range",
            "required": true,
            "type": "string",
            "format": "date-time"
          },
          {
            "in": "query",
            "name": "location",
            "description": "Location of diseases searched",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "key_terms",
            "description": "Key terms to search for: Searches for entries with ALL of these terms",
            "required": true,
            "type": "array",
            "items": {
              "type": "string"
            },
            "collectionFormat": "csv"
          }
        ],
        "responses": {
          "200": {
            "description": "Search result",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/SearchResult"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "SearchResult": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "link": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}