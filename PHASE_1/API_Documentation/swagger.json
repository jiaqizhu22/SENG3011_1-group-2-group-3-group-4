{
  "swagger": "2.0",
  "info": {
    "description": "1 Group 2 Group 3 Group 4 - Epidemic Scraper Documentation",
    "version": "1.0.0",
    "title": "Epidemic Scraper",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "epidemicscraper-env.eba-t2stx6uv.us-east-1.elasticbeanstalk.com",
  "basePath": "/",
  "tags": [
    {
      "name": "Search",
      "description": "Methods for searching the scraped database"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/search": {
      "get": {
        "tags": [
          "Search"
        ],
        "summary": "Search for articles",
        "description": "This allows user to search for articles matching the parameters (period, disease, location)",
        "operationId": "getSearch",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "start_date",
            "description": "Start date of search range",
            "required": true,
            "type": "string",
            "format": "date-time"
          },
          {
            "in": "query",
            "name": "end_date",
            "description": "End date of search range",
            "required": true,
            "type": "string",
            "format": "date-time"
          },
          {
            "in": "query",
            "name": "location",
            "description": "Location of diseases searched",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "key_terms",
            "description": "Key terms to search for: Searches for entries with ALL of these terms",
            "required": true,
            "type": "array",
            "items": {
              "type": "string"
            },
            "collectionFormat": "csv"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "results": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/SearchResult"
                  },
                  "uniqueItems": true
                }
              },
              "example": {
                "results": [
                  {
                    "title": "Article Title",
                    "date": "2015-10-01T08:45:10Z",
                    "link": "article.com/article-title"
                  },
                  {
                    "title": "Second Article",
                    "date": "2015-10-01T09:32:11Z",
                    "link": "article.com/article-number-two"
                  }
                ]
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/definitions/Error400"
            }
          },
          "404": {
            "description": "Page Not Found",
            "schema": {
              "$ref": "#/definitions/Error404"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "$ref": "#/definitions/Error500"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "SearchResult": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "date_of_publication": {
          "type": "string",
          "format": "date-time"
        },
        "headline": {
          "type": "string"
        },
        "main_text": {
          "type": "string"
        },
        "reports": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "object",
            "properties": {
              "diseases": {
                "type": "array",
                "uniqueItems": true,
                "items": {
                  "type": "string"
                }
              },
              "syndromes": {
                "type": "array",
                "uniqueItems": true,
                "items": {
                  "type": "string"
                }
              },
              "event_date": {
                "type": "string",
                "format": "date-time"
              },
              "locations": {
                "type": "array",
                "uniqueItems": true,
                "items": {
                  "type": "object",
                  "properties": {
                    "country": {
                      "type": "string"
                    },
                    "location": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "Error400": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        }
      },
      "example": {
        "code": 400,
        "message": "400 Bad Request"
      }
    },
    "Error404": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        }
      },
      "example": {
        "code": 404,
        "message": "404 Page Not Found"
      }
    },
    "Error500": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        }
      },
      "example": {
        "code": 500,
        "message": "500 Internal Server Error"
      }
    }
  }
}